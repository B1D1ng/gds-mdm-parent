    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/*IT.java</include>
                        <include>**/RepositoryItSuite.java</include>
                        <include>**/ResourceItSuite.java</include>
                    </includes>
                    <excludes>
                        <!-- In order to speed up ITs we run suits instead individual test. -->
                        <!-- Excluded tests already run inside a suit, and suits run with surefire plugin, thus excluded here. -->
                        <exclude>**/resource/**/*IT.java</exclude> <!-- covered by ResourceItSuite -->
                        <exclude>**/repository/**/*IT.java</exclude> <!-- covered by RepositoryItSuite -->
                    </excludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>create-module-jar</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>module</classifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.ebay.raptor.build</groupId>
                <artifactId>service-discovery-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>com.ebay.raptor.build</groupId>
                <artifactId>assembler-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>com.ebay.globalconfig</groupId>
